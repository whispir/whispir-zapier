{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "ignoreDeprecations": "5.0",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "lib": ["dom", "ES2019", "es6", "es5", "dom.iterable", "scripthost"],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["dist", "node_modules"]
}
